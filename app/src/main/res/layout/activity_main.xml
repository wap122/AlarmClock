<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.minhl.alarmclock.MainActivity">

    <EditText
        android:id="@+id/edt_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nhập giờ"
        android:inputType="number" />

    <EditText
        android:id="@+id/edt_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_hour"
        android:hint="Nhập phút"
        android:inputType="number" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="alarmClock"
        android:text="Đặt giờ" />
</RelativeLayout>
